<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/file_complaint"
        android:layout_width="wrap_content"
        android:text="File Your Complaint"
        android:textSize="15sp"
        android:textColor="@color/links"
        android:drawableEnd="@drawable/ic_baseline_info_24"
        android:drawablePadding="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/agaramondpro_regular"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/et_complaint_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/et_backdesign"
        android:hint="Title"
        android:padding="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:text="Images If Any"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/agaramondpro_regular"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imview_one"
                android:layout_width="160dp"
                android:src="@drawable/ic_image_place"
                android:layout_marginRight="5dp"
                android:layout_alignParentStart="true"
                android:layout_height="160dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imview_two"
                android:layout_width="160dp"
                android:src="@drawable/ic_image_place"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="160dp"/>

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imview_three"
                android:layout_width="160dp"
                android:src="@drawable/ic_image_place"
                android:layout_marginRight="5dp"
                android:layout_alignParentStart="true"
                android:layout_height="160dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imview_four"
                android:layout_width="160dp"
                android:src="@drawable/ic_image_place"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:layout_height="160dp"/>

        </RelativeLayout>

    </LinearLayout>


    <EditText
        android:id="@+id/et_complaint_desc"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/et_backdesign"
        android:fontFamily="@font/agaramondpro_regular"
        android:hint="Description"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnViewers"
        android:layout_width="match_parent"
        android:text="Select Viewers"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@color/contact_background"
        android:backgroundTint="@color/links"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btnSubmitDetails"
        android:layout_width="match_parent"
        android:text="Submit"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:textColor="@color/contact_background"
        android:backgroundTint="@color/links"
        android:layout_height="wrap_content"/>


</LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>